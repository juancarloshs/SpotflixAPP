<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoviesActivity"
    android:background="@drawable/gradient_background_movies">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookthumbnail"
                android:layout_width="155dp"
                android:layout_height="200dp"
                android:background="#2d2d2d"
                android:scaleType="centerCrop" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/txttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Movie Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/brightcove_black"
                android:id="@+id/txtCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#edecec"
                android:padding="8dp"
                android:text="Category" />

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="8dp"
                android:text="Description"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageButton
                android:background="#50000000"
                android:layout_marginTop="30dp"
                android:id="@+id/button"
                android:src="@drawable/ic_action_playback_play"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:onClick="ReproducirPelicula"
                android:text="Play" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>