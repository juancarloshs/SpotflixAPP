<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_music">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/portada"
                android:layout_width="125dp"
                android:layout_height="175dp"
                android:background="#2d2d2d"
                android:scaleType="centerCrop" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/txttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Album Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/brightcove_black"
                android:id="@+id/txtGen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#edecec"
                android:padding="8dp"
                android:text="Genre" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/txtArtista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Artist"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageButton
                android:background="#50000000"
                android:layout_marginTop="30dp"
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:onClick="MostrarCanciones"
                android:text="Ir a album"
                android:src="@drawable/ic_library_music"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>